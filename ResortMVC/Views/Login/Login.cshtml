
@{
    ViewBag.Title = "Login";
}


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/Login.png" class="img-thumbnail" />
        </div>

        <div class="col-md-6">
            <h1 align="center">Admin Login</h1>

            <form action="LoginDetails" method="post" cellspacing="10px">

                <div class="form-group">
                    <label>Enter Email </label>
                    <input id="Name" name="Name" type="text" class="form-control-lg" placeholder="Enter Email" required="" />
                </div>

                <div class="form-group">
                    <label>Enter Name </label>
                    <input id="Password" name="Password" type="password" class="form-control-lg" placeholder="Enter Password" required="" />
                </div>


                <input id="submit" name="submit" type="submit" value="Login " class="btn btn-primary" style="padding:10px;font-size:15px;" />


            </form>


        </div>





    </div>
</div>





